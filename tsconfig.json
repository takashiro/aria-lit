{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"declaration": true,
		"esModuleInterop": true,
		"strict": true,
    "experimentalDecorators": true,
		"useDefineForClassFields": false,
		"forceConsistentCasingInFileNames": true,
		"plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
			}
		]
	},
	"include": [
		"src"
	]
}
